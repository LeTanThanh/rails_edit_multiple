<div class="container">
  <h2>Products List</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.category.name %></td>
          <td><%= number_to_currency product.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
